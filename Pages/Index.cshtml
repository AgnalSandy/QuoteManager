                    <h3>Role-Based Access</h3>
                    <p>Manage teams with hierarchical user roles and permissions</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="cta-section" id="client-info">
    <div class="container text-center">
        @if (User.IsInRole("Client"))
        {
            <h2>👤 Welcome, @User.Identity?.Name!</h2>
            <p class="mb-4">Your account is active and ready to use.</p>
            <div class="alert alert-info d-inline-block text-left">
                <h5><i class="fas fa-info-circle"></i> Client Account Information</h5>
                <p class="mb-2">✅ You can view quotes created for you</p>
                <p class="mb-2">✅ Your account manager will create quotes on your behalf</p>
                <p class="mb-2">✅ You'll be notified when new quotes are available</p>
                <p class="mb-0">📧 Contact your account manager if you need assistance</p>
            </div>
        }
        else
        {
            <h2>Ready to Get Started?</h2>
            <p>Streamline your quote management process with our powerful platform</p>
            @if (User.Identity?.IsAuthenticated != true)
            {
                <p class="text-white-50 mt-3">Contact your administrator for account access</p>
            }
        }
    </div>
</div>
