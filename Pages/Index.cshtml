@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Welcome to QuoteManager</h1>
        <p class="hero-subtitle">Manage your quotes efficiently and professionally</p>
       
        
        <div class="hero-buttons">
            @if (User.Identity?.IsAuthenticated == true)
            {
                @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("SuperAdmin"))
                {
                    <a href="/Dashboard" class="btn btn-primary btn-lg">Go to Dashboard</a>
                }
                else if (User.IsInRole("Client"))
                {
                    <a href="#quotes" class="btn btn-primary btn-lg">View My Information</a>
                }
            }
            else
            {
                <a href="/Identity/Account/Login" class="btn btn-primary btn-lg">Sign In</a>
            }
        </div>


    </div>
</div>

