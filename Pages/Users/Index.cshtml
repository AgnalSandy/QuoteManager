@page
@model QuoteManager.Pages.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="row mb-3">
    <div class="col-12">
        <h2><i class="fas fa-users"></i> User Management</h2>
    </div>
</div>

@if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("Staff"))
{
    <div class="row mb-3">
        <div class="col-12">
            <a asp-page="Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Create New User
            </a>
        </div>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Users != null && Model.Users.Any())
                            {
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>@(user.PhoneNumber ?? "N/A")</td>
                                        <td>
                                            @if (user.Role == "SuperAdmin")
                                            {
                                                <span class="badge bg-danger">@user.Role</span>
                                            }
                                            else if (user.Role == "Admin")
                                            {
                                                <span class="badge bg-warning">@user.Role</span>
                                            }
                                            else if (user.Role == "Staff")
                                            {
                                                <span class="badge bg-info">@user.Role</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@user.Role</span>
                                            }
                                        </td>
                                        <td>
                                            @if (User.IsInRole("SuperAdmin"))
                                            {
                                                <!-- SuperAdmin can edit/delete all users (SuperAdmin is hidden from list anyway) -->
                                                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>

                                                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" style="display:inline;"
                                                      onsubmit="return confirm('Are you sure you want to delete @user.FullName?');">
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </form>
                                            }
                                            else if (User.IsInRole("Admin") && (user.Role == "Staff" || user.Role == "Client"))
                                            {
                                                <!-- Admin can edit/delete Staff and Client they created -->
                                                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>

                                                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" style="display:inline;"
                                                      onsubmit="return confirm('Are you sure you want to delete @user.FullName?');">
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </form>
                                            }
                                            else if (User.IsInRole("Staff") && user.Role == "Client")
                                            {
                                                <!-- Staff can edit/delete Clients they created -->
                                                <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>

                                                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" style="display:inline;"
                                                      onsubmit="return confirm('Are you sure you want to delete @user.FullName?');">
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No actions available</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No users found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
