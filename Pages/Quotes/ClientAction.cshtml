@page
@model QuoteManager.Pages.Quotes.ClientActionModel
@{
    ViewData["Title"] = "Respond to Quote";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1>Respond to Quote #@Model.Quote.Id</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">

                <!-- Quote Details Card -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-file-alt"></i> Quote Details
                        </h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Title</dt>
                            <dd class="col-sm-9"><h5>@Model.Quote.Title</h5></dd>

                            <dt class="col-sm-3">Description</dt>
                            <dd class="col-sm-9">@(Model.Quote.Description ?? "No description")</dd>

                            <dt class="col-sm-3">Amount</dt>
                            <dd class="col-sm-9">
                                <h3 class="text-success">
                                    <i class="fas fa-dollar-sign"></i> @Model.Quote.Amount.ToString("N2")
                                </h3>
                            </dd>

                            <dt class="col-sm-3">Created By</dt>
                            <dd class="col-sm-9">@Model.Quote.CreatedBy.FullName</dd>

                            <dt class="col-sm-3">Created Date</dt>
                            <dd class="col-sm-9">@Model.Quote.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-3">Valid Until</dt>
                            <dd class="col-sm-9">
                                @if (Model.Quote.ValidUntil.HasValue)
                                {
                                    <span>@Model.Quote.ValidUntil.Value.ToString("MMMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">No expiry</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <!-- Response Form -->
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-hand-pointer"></i> Your Response
                        </h3>
                    </div>
                    <div class="card-body text-center">
                        <h5 class="mb-4">What would you like to do with this quote?</h5>

                        <form method="post">
                            <input type="hidden" asp-for="Quote.Id" />

                            <button type="submit" asp-page-handler="Accept" class="btn btn-success btn-lg mr-3">
                                <i class="fas fa-check-circle"></i> Accept Quote
                            </button>

                            <button type="submit" asp-page-handler="Reject" class="btn btn-danger btn-lg">
                                <i class="fas fa-times-circle"></i> Reject Quote
                            </button>

                            <hr />

                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Quotes
                            </a>

                            <a asp-page="Details" asp-route-id="@Model.Quote.Id" class="btn btn-info">
                                <i class="fas fa-eye"></i> View Full Details
                            </a>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Confirmation dialogs
        document.querySelectorAll('button[type="submit"]').forEach(button => {
            button.addEventListener('click', function (e) {
                const handler = this.getAttribute('formaction') || this.getAttribute('asp-page-handler');
                const action = handler && handler.includes('Reject') ? 'reject' : 'accept';

                if (!confirm(`Are you sure you want to ${action} this quote?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
