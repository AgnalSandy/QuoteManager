@page
@model QuoteManager.Pages.Quotes.CreateModel
@{
    ViewData["Title"] = "Create Quote";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create New Quote</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="Index">Quotes</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-file-alt"></i> Quote Information
                        </h3>
                    </div>

                    <form method="post">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <!-- Client Selection -->
                            <div class="form-group">
                                <label asp-for="Quote.ClientId" class="required"></label>
                                <select asp-for="Quote.ClientId" asp-items="Model.ClientsList" class="form-control">
                                    <option value="">-- Select Client --</option>
                                </select>
                                <span asp-validation-for="Quote.ClientId" class="text-danger"></span>
                                <small class="form-text text-muted">Select the client this quote is for</small>
                            </div>

                            <!-- Quote Title -->
                            <div class="form-group">
                                <label asp-for="Quote.Title" class="required"></label>
                                <input asp-for="Quote.Title" class="form-control" placeholder="e.g., Website Development" />
                                <span asp-validation-for="Quote.Title" class="text-danger"></span>
                            </div>

                            <!-- Description -->
                            <div class="form-group">
                                <label asp-for="Quote.Description"></label>
                                <textarea asp-for="Quote.Description" class="form-control" rows="3"
                                          placeholder="Brief description of the work to be done..."></textarea>
                                <span asp-validation-for="Quote.Description" class="text-danger"></span>
                            </div>

                            <!-- Amount -->
                            <div class="form-group">
                                <label asp-for="Quote.Amount" class="required"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-dollar-sign"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Quote.Amount" class="form-control" type="number" step="0.01"
                                           placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Quote.Amount" class="text-danger"></span>
                            </div>

                            <!-- Valid Until -->
                            <div class="form-group">
                                <label asp-for="Quote.ValidUntil"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Quote.ValidUntil" class="form-control" type="date" />
                                </div>
                                <span asp-validation-for="Quote.ValidUntil" class="text-danger"></span>
                                <small class="form-text text-muted">Date until this quote is valid (optional)</small>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Quote
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Help Card -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle"></i> Tips
                        </h3>
                    </div>
                    <div class="card-body">
                        <ul class="mb-0">
                            <li>Quote Number will be auto-generated (e.g., Q-2026-0001)</li>
                            <li>The client dropdown shows only clients you have permission to create quotes for</li>
                            <li>Quote status will be set to "Pending" automatically</li>
                            <li>Client will be notified and can Accept/Reject the quote</li>
                            <li>You can edit the quote later before the client responds</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
